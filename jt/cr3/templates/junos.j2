{# Edit this template to perform the actions stated in the comments #}
{# loop through each name server #}
{% for i in nameservers %}
set system name-server {{ i }}
{% endfor %}
{# loop through each syslog server #}
{% for i in syslog_servers %}
set system syslog host {{ i['name'] }} source-address {{ i['address'] }}
{% endfor %}
{# loop through each ntp server #}
{% for i in ntp_servers %}
set system ntp server {{ i }}
{% endfor %}
